# AIAS Platform - Environment Variables Template
# Copy this file to .env.local for development
# See ops/env/ENV_VARS.md for detailed documentation

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development

# Application URL (public)
NEXT_PUBLIC_APP_URL=http://localhost:3000
VITE_APP_URL=http://localhost:3000
VITE_APP_VERSION=1.0.0

# Logging
LOG_LEVEL=info

# Port
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/aias_platform
DIRECT_URL=postgresql://postgres:password@localhost:5432/aias_platform
POSTGRES_DB=aias_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase Project
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# JWT Configuration
PGRST_JWT_SECRET=your_pgrst_jwt_secret
PGRST_JWT_EXP=3600
JWT_SECRET=your_jwt_secret_32_chars_min
SECRET_KEY_BASE=your_secret_key_base_64_chars

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_BASIC=price_basic_plan_id
STRIPE_PRICE_PRO=price_pro_plan_id
STRIPE_PRICE_ADDON=price_addon_id

# Stripe Frontend (Vite)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
VITE_STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly
VITE_STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly
VITE_STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly
VITE_STRIPE_PRICE_PRO_YEARLY=price_pro_yearly
VITE_STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly
VITE_STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly
VITE_STRIPE_PRICE_LEAD_SCORING=price_lead_scoring
VITE_STRIPE_PRICE_EMAIL_SEQUENCES=price_email_sequences
VITE_STRIPE_PRICE_MEETING_SCHEDULER=price_meeting_scheduler
VITE_STRIPE_PRICE_DATA_MIGRATION=price_data_migration
VITE_STRIPE_PRICE_REPORT_GENERATOR=price_report_generator

# PayPal (Optional)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# =============================================================================
# AI PROVIDERS
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key
AI_PRIMARY_PROVIDER=openai

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# Google
GOOGLE_API_KEY=your_google_api_key

# =============================================================================
# EMAIL SERVICES
# =============================================================================

# Resend
RESEND_API_KEY=re_your_resend_api_key

# Postmark
POSTMARK_API_TOKEN=your_postmark_api_token

# =============================================================================
# OBSERVABILITY & MONITORING
# =============================================================================

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-endpoint.com
OTEL_SERVICE_NAME=aias-platform

# Sentry
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=aias-platform
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Metrics
METRICS_TOKEN=your_metrics_token

# =============================================================================
# LOGGING & ANALYTICS
# =============================================================================

# Logflare
LOGFLARE_API_KEY=your_logflare_api_key
LOGFLARE_LOGGER_BACKEND_API_KEY=your_logflare_backend_key

# Analytics
NEXT_ANALYTICS_BACKEND_PROVIDER=postgres
NEXT_ANALYTICS_BACKEND_URL=postgresql://postgres:password@localhost:5432/analytics
NEXT_ANALYTICS_BACKEND_API_KEY=your_analytics_api_key

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key

# Content Security Policy
CSP_REPORT_URI=/csp-report

# =============================================================================
# INTEGRATIONS (Front-End Enrichment)
# =============================================================================

# Vercel Analytics (enabled by default if deployed on Vercel)
# No key needed - automatically enabled on Vercel

# Plausible Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com
NEXT_PUBLIC_PLAUSIBLE_API_HOST=https://plausible.io

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Microsoft Clarity
NEXT_PUBLIC_CLARITY_PROJECT_ID=your_clarity_project_id

# Sentry (already configured above)
# SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Cloudinary
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Pusher (for real-time features)
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
NEXT_PUBLIC_PUSHER_CLUSTER=mt1

# Ably (alternative to Pusher)
NEXT_PUBLIC_ABLY_API_KEY=your_ably_api_key

# Algolia Search
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your_search_api_key
ALGOLIA_ADMIN_API_KEY=your_admin_api_key

# Trustpilot
TRUSTPILOT_BUSINESS_UNIT_ID=your_business_unit_id
NEXT_PUBLIC_TRUSTPILOT_API_KEY=your_api_key

# Tidio Chat
NEXT_PUBLIC_TIDIO_CHAT_ID=your_tidio_chat_id

# Crisp Chat
NEXT_PUBLIC_CRISP_WEBSITE_ID=your_crisp_website_id

# hCaptcha
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=your_hcaptcha_site_key
HCAPTCHA_SECRET_KEY=your_hcaptcha_secret_key

# reCAPTCHA v3
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Lemon Squeezy (already configured above)
# See payment processing section

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Payment Providers
ENABLE_LEMON_SQUEEZY=false

# Monitoring
ENABLE_SENTRY=false
ENABLE_OTEL=true

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Container Settings
DOCKER_REGISTRY=your_registry.com
DOCKER_IMAGE_TAG=latest

# Health Checks
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# =============================================================================
# MONITORING & ALERTING
# =============================================================================

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# Prometheus
PROMETHEUS_RETENTION_TIME=200h

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket URL for real-time features
REACT_APP_WS_URL=ws://localhost:8080

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable development features
NEXT_PUBLIC_ENABLE_LOGS=true

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. Never commit this file with real secrets
# 2. Use different values for each environment
# 3. Rotate secrets regularly
# 4. Use secret management services in production
# 5. Generate strong, unique passwords
# 6. Keep this file in sync with ops/env/ENV_VARS.md

# =============================================================================
# GENERATION COMMANDS
# =============================================================================

# Generate JWT Secret (32+ characters):
# openssl rand -base64 32

# Generate Secret Key Base (64+ characters):
# openssl rand -base64 64

# Generate Encryption Key (32 characters):
# openssl rand -base64 32 | head -c 32