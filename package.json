{
  "name": "ai-consultancy-website",
  "version": "1.0.0",
  "description": "Self-hostable AI consultancy website with interactive features, monetization, and data feeds",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "ANALYZE=true vite build",
    "preview": "vite preview",
    "start": "vite preview --port 3000 --host",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "queue:worker": "tsx src/workers/index.ts",
    "doctor": "tsx scripts/doctor.ts",
    "analyze": "npm run build:analyze",
    "a11y": "playwright test --grep @accessibility",
    "lighthouse": "lighthouse-ci autorun",
    "clean": "rm -rf node_modules dist .next",
    "install:all": "pnpm install",
    "docker:build": "docker build -t aias-consultancy .",
    "docker:run": "docker run -p 3000:3000 aias-consultancy",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "deploy:staging": "npm run build && npm run docker:build && npm run docker:run",
    "deploy:production": "npm run build && npm run docker:build && docker-compose -f docker-compose.prod.yml up -d"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "vite-plugin-pwa": "^0.17.4",
    "rollup-plugin-visualizer": "^5.9.2",
    "terser": "^5.24.0",
    "vitest": "^1.0.4",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "playwright": "^1.40.1",
    "@playwright/test": "^1.40.1",
    "lighthouse-ci": "^1.13.1",
    "@axe-core/playwright": "^4.8.2",
    "axe-playwright": "^1.2.0",
    "prisma": "^5.7.1",
    "tsx": "^4.6.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}