{
  "name": "ai-consultancy-website",
  "version": "1.0.0",
  "description": "Self-hostable AI consultancy website with interactive features, monetization, and data feeds",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "typecheck": "pnpm --filter web typecheck",
    "lint": "pnpm --filter web lint",
    "format": "pnpm --filter web format",
    "test": "pnpm --filter web test",
    "test:e2e": "pnpm --filter web test:e2e",
    "db:push": "pnpm --filter web db:push",
    "db:migrate": "pnpm --filter web db:migrate",
    "db:seed": "pnpm --filter web db:seed",
    "queue:worker": "pnpm --filter web queue:worker",
    "doctor": "pnpm --filter web doctor",
    "preview": "pnpm --filter web preview",
    "analyze": "pnpm --filter web analyze",
    "a11y": "pnpm --filter web a11y",
    "lighthouse": "pnpm --filter web lighthouse",
    "clean": "pnpm -r exec rm -rf node_modules && pnpm -r exec rm -rf dist",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}