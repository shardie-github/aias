{
  "name": "aias-platform",
  "version": "1.0.0",
  "description": "Enterprise-grade AI consultancy platform showcasing custom AI agents, workflow automation, and intelligent business solutions",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "AIAS Platform Team",
    "email": "team@aias-platform.com",
    "url": "https://aias-platform.com"
  },
  "homepage": "https://aias-platform.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/aias-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/aias-platform/issues",
    "email": "support@aias-platform.com"
  },
  "keywords": [
    "ai",
    "artificial-intelligence",
    "automation",
    "workflow",
    "saas",
    "multi-tenant",
    "enterprise",
    "typescript",
    "react",
    "nextjs",
    "supabase"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "ANALYZE=true vite build",
    "preview": "vite preview",
    "start": "vite preview --port 3000 --host",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:cov": "vitest --coverage --reporter=html --reporter=text",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "queue:worker": "tsx src/workers/index.ts",
    "doctor": "tsx scripts/doctor.ts",
    "ops": "tsx ops/cli.ts",
    "analyze": "npm run build:analyze",
    "a11y": "playwright test --grep @accessibility",
    "lighthouse": "lighthouse-ci autorun",
    "audit:deps": "npm audit --audit-level moderate",
    "audit:licenses": "license-checker --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC'",
    "audit:security": "npm audit --audit-level high",
    "security:check": "tsx scripts/security-self-check.ts",
    "perf:budgets": "lighthouse-ci autorun",
    "perf:analyze": "npm run build:analyze && open dist/stats.html",
    "clean": "rm -rf node_modules dist .next",
    "install:all": "pnpm install",
    "docker:build": "docker build -t aias-consultancy .",
    "docker:run": "docker run -p 3000:3000 aias-consultancy",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "deploy:staging": "npm run build && npm run docker:build && npm run docker:run",
    "deploy:production": "npm run build && npm run docker:build && docker-compose -f docker-compose.prod.yml up -d",
    "flags:init": "tsx scripts/feature-flags.ts init",
    "flags:list": "tsx scripts/feature-flags.ts list",
    "flags:toggle": "tsx scripts/feature-flags.ts toggle",
    "flags:export": "tsx scripts/feature-flags.ts export",
    "migrate:emc": "tsx scripts/migrate-emc.ts run",
    "migrate:status": "tsx scripts/migrate-emc.ts status",
    "dr:check": "tsx scripts/clone-and-restore-check.ts run",
    "slo:check": "tsx scripts/slo-checker.ts run",
    "chaos:run": "tsx scripts/chaos-mini.ts run",
    "secrets:rotate": "tsx scripts/rotate-secrets.ts rotate-all",
    "secrets:rotate-single": "tsx scripts/rotate-secrets.ts rotate",
    "ai:diagnose": "tsx ai/self_diagnose.ts",
    "ai:insights": "node ai/insights_agent.mjs",
    "ai:futurecheck": "tsx scripts/futurecheck.ts",
    "ai:embeddings": "node scripts/generate-embeddings.mjs",
    "ai:autoscale": "tsx ai/ai_autoscale.ts",
    "ai:privacy": "tsx ai/privacy_guard.ts",
    "ai:audit": "npm run ai:diagnose && npm run ai:insights && npm run ai:futurecheck && npm run ai:privacy",
    "watchers:db": "tsx watchers/db_integrity.watcher.ts",
    "watchers:api": "tsx watchers/api_contract.watcher.ts",
    "watchers:ai": "tsx watchers/ai_performance.watcher.ts",
    "watchers:all": "npm run watchers:db && npm run watchers:api && npm run watchers:ai",
    "ops": "tsx ops/cli.ts",
    "guardian:verify": "tsx ops/cli.ts guardian verify",
    "guardian:audit": "tsx ops/cli.ts guardian audit",
    "guardian:report": "tsx ops/cli.ts guardian report",
    "guardian:status": "tsx ops/cli.ts guardian status"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.16",
    "axe-playwright": "^1.2.0",
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^13.24.0",
    "husky": "^8.0.3",
    "license-checker": "^25.0.1",
    "lighthouse-ci": "^1.13.1",
    "lint-staged": "^15.2.0",
    "playwright": "^1.40.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "prisma": "^5.7.1",
    "rollup-plugin-visualizer": "^5.9.2",
    "tailwindcss": "^3.3.6",
    "terser": "^5.24.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^7.0.0",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.0.4",
    "commander": "^11.1.0",
    "@opentelemetry/sdk-node": "^0.47.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.47.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.47.0",
    "@opentelemetry/auto-instrumentations-node": "^0.47.0",
    "@opentelemetry/resources": "^1.21.0",
    "@opentelemetry/semantic-conventions": "^1.21.0",
    "@opentelemetry/sdk-metrics": "^1.21.0",
    "zod": "^3.22.4",
    "stripe": "^14.9.0"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-org"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss,sass}": [
      "prettier --write"
    ]
  }
}