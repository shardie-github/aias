# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.sh text eol=lf
*.sql text eol=lf
*.txt text eol=lf
*.toml text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.gz binary
*.bz2 binary
*.7z binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Lockfiles should use LF
package-lock.json text eol=lf
pnpm-lock.yaml text eol=lf
yarn.lock text eol=lf
bun.lockb binary

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf
