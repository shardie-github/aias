# ===========================================
# Finance → Automation → Growth ETL Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ===========================================
# Supabase Configuration
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here
DATABASE_URL=postgresql://postgres:[password]@[host]:5432/postgres
SUPABASE_DB_URL=postgresql://postgres:[password]@[host]:5432/postgres

# ===========================================
# Meta (Facebook/Instagram) Ads API
# ===========================================
META_ACCESS_TOKEN=your-meta-access-token-here
META_TOKEN=your-meta-access-token-here
META_AD_ACCOUNT_ID=your-meta-ad-account-id-here

# ===========================================
# TikTok Ads API
# ===========================================
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token-here
TIKTOK_TOKEN=your-tiktok-access-token-here
TIKTOK_ADVERTISER_ID=your-tiktok-advertiser-id-here

# ===========================================
# Shopify Admin API
# ===========================================
SHOPIFY_API_KEY=your-shopify-api-key-here
SHOPIFY_PASSWORD=your-shopify-api-password-here
SHOPIFY_STORE=your-store-name
# Note: SHOPIFY_STORE should be just the store name (e.g., 'mystore' for mystore.myshopify.com)

# ===========================================
# Timezone Configuration
# ===========================================
TZ=America/Toronto

# ===========================================
# Optional: Logging and Debugging
# ===========================================
LOG_LEVEL=info
DEBUG=false

# ===========================================
# Optional: Feature Flags
# ===========================================
ENABLE_ETL_DRY_RUN=false
ETL_BATCH_SIZE=100

# ===========================================
# Notes:
# - All tokens and keys are placeholders
# - Replace with actual credentials from respective platforms
# - Store secrets securely (use secret management service in production)
# - Rotate tokens regularly for security
